<h2>Dashboard</h2>
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-primary text-white p-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-person-fill fs-3 me-3"></i>
                <div>
                    <h5 class="mb-0">Total Patients</h5>
                    <p class="mb-0 fs-4"><%= (cards&&cards.totalPatients)||((patients||[]).length) %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-danger text-white p-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="mb-0">Critical Alerts</h5>
                    <p class="mb-0 fs-4"><%= (cards&&cards.criticalAlerts)||0 %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-warning text-dark p-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-heart-pulse-fill fs-3 me-3"></i>
                <div>
                    <h5 class="mb-0">At-Risk Patients</h5>
                    <p class="mb-0 fs-4"><%= (cards&&cards.atRiskPatients)||0 %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card bg-success text-white p-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-chat-fill fs-3 me-3"></i>
                <div>
                    <h5 class="mb-0">Unread Messages</h5>
                    <p class="mb-0 fs-4"><%= (cards&&cards.unreadMessages)||0 %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Health Trend (Last 7 Days)</h6>
            <div class="chart-container">
                <canvas id="healthTrendChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Health Status Distribution</h6>
            <div class="chart-container">
                <canvas id="healthOverviewChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Recent Alerts</h6>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Alert Type</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (alerts||[]).forEach(a => { %>
                        <tr>
                            <td><%= a.Patient?.User?.name || a.patient_id %></td>
                            <td><%= a.alert_type %></td>
                            <td><%= a.description || '' %></td>
                            <td>
                                <button class="btn btn-sm btn-success" onclick="acknowledgeAlert(<%= a.id %>)">Acknowledge</button>
                                <button class="btn btn-sm btn-danger" onclick="dismissAlert(<%= a.id %>)">Dismiss</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Quick Actions</h6>
            <div class="d-flex flex-wrap gap-2">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPatientModal">Add Patient</button>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sendMessageModal">Send Message</button>
                <a class="btn btn-primary" href="/caregiver/patient-list">View All Patients</a>
                <a class="btn btn-primary" href="/caregiver/reports">Generate Report</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Recent Messages</h6>
            <ul class="list-group">
                <% (messages||[]).forEach(m => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= m.sender ? (m.sender.name + ' â†’ ') : '' %><%= m.receiver ? m.receiver.name : 'All' %>: <%= (m.content || '').slice(0,80) %></span>
                    <span class="badge bg-primary"><%= new Date(m.created_at).toISOString().slice(0,10) %></span>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card p-3">
            <h6>Pending Recommendations</h6>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    PT12345: Increase activity
                    <span class="badge bg-warning">Pending</span>
                </li>
            </ul>
        </div>
    </div>
</div>


