<h2>Patient List</h2>
<div class="card p-3 mb-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" class="form-control" id="searchPatients" placeholder="Search by ID or Name">
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100" id="searchBtn" type="button">Search</button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#addPatientModal">Add Patient</button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Device Type</th>
                    <th>Health Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="patientRows">
                <% (patients||[]).forEach(p => { %>
                <tr>
                    <td>PT<%= p.id %></td>
                    <td><%= p.User?.name || '-' %></td>
                    <td><%= p.User?.date_of_birth ? Math.max(0, Math.floor((Date.now() - new Date(p.User.date_of_birth).getTime()) / (365.25*24*60*60*1000))) : '-' %></td>
                    <td><% if (p.User && p.User.WearableDevices && p.User.WearableDevices.length > 0) { %><%= p.User.WearableDevices[0].device_type %><% } else { %>-<% } %></td>
                    <td><%= p.health_status || '-' %></td>
                    <td>
                        <button class="btn btn-sm btn-primary" onclick="assignPatient(<%= p.id %>)">Assign to Me</button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script>
function filterPatients(val){
  val = (val||'').toLowerCase().trim();
  const rows = document.querySelectorAll('#patientRows tr');
  if (val === '') { rows.forEach(tr => tr.style.display = ''); return; }
  rows.forEach(tr => {
    const id = tr.cells[0].textContent.toLowerCase();
    const name = tr.cells[1].textContent.toLowerCase();
    const age = tr.cells[2].textContent.toLowerCase();
    const device = tr.cells[3].textContent.toLowerCase();
    const status = tr.cells[4].textContent.toLowerCase();
    const matches = id.includes(val) || name.includes(val) || age.includes(val) || device.includes(val) || status.includes(val);
    tr.style.display = matches ? '' : 'none';
  });
}
document.getElementById('searchPatients')?.addEventListener('input', function () { filterPatients(this.value); });
document.getElementById('searchBtn')?.addEventListener('click', function(){
  const val = document.getElementById('searchPatients')?.value || '';
  filterPatients(val);
});
</script>


