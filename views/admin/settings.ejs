<div class="p-4">
      <h2>Settings</h2>
      <div class="card p-3 mb-4">
        <ul class="nav nav-tabs" id="settingsTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="roles-tab" data-bs-toggle="tab" data-bs-target="#roles" type="button" role="tab">Roles & Permissions</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="chatbot-tab" data-bs-toggle="tab" data-bs-target="#chatbot" type="button" role="tab">Chatbot Settings</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="wearable-tab" data-bs-toggle="tab" data-bs-target="#wearable" type="button" role="tab">Wearable Integration</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab">Security</button>
          </li>
        </ul>
        <div class="tab-content mt-3" id="settingsTabContent">
          <div class="tab-pane fade show active" id="roles" role="tabpanel">
            <h5>Roles & Permissions</h5>
            <div class="row mb-3">
              <div class="col-md-6"><button class="btn btn-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#addRoleModal">Add New Role</button></div>
              <div class="col-md-6"><input type="text" class="form-control" placeholder="Search Roles" id="searchRoles"></div>
            </div>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead><tr><th>ID</th><th>Role</th><th>Actions</th></tr></thead>
                <tbody>
                  <% (roles||[]).forEach(function(r){ %>
                    <tr>
                      <td><%= r.id %></td>
                      <td><%= r.name %></td>
                      <td>
                        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editRoleModal" data-id="<%= r.id %>" data-name="<%= r.name %>" data-permissions='<%- JSON.stringify(r.permissions || {}) %>'>Edit</button>
                        <form class="d-inline" method="post" action="/admin/settings/roles/<%= r.id %>/delete"><button class="btn btn-sm btn-danger">Delete</button></form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Add Role Modal -->
          <div class="modal fade" id="addRoleModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <form id="addRoleForm" method="post" action="/admin/settings/roles">
                  <div class="modal-header"><h5 class="modal-title">Add Role</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                  <div class="modal-body">
                    <input type="text" class="form-control" id="roleName" name="name" placeholder="Role name" required>
                  </div>
                  <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button><button type="submit" class="btn btn-primary">Save</button></div>
                </form>
              </div>
            </div>
          </div>

          <!-- Edit Role Modal -->
          <div class="modal fade" id="editRoleModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <form id="editRoleForm" method="post">
                  <div class="modal-header"><h5 class="modal-title">Edit Role</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                  <div class="modal-body">
                    <input type="text" class="form-control" id="editRoleName" name="name" placeholder="Role name" required>
                    <hr>
                    <label class="form-label">Permissions</label>
                    <div class="form-check"><input class="form-check-input perm" type="checkbox" data-key="viewPatients" id="permViewPatients" checked><label class="form-check-label" for="permViewPatients">View Patients</label></div>
                    <div class="form-check"><input class="form-check-input perm" type="checkbox" data-key="manageUsers" id="permManageUsers"><label class="form-check-label" for="permManageUsers">Manage Users</label></div>
                    <div class="form-check"><input class="form-check-input perm" type="checkbox" data-key="sendMessages" id="permSendMessages"><label class="form-check-label" for="permSendMessages">Send Messages</label></div>
                    <div class="form-check"><input class="form-check-input perm" type="checkbox" data-key="viewReports" id="permViewReports"><label class="form-check-label" for="permViewReports">View Reports</label></div>
                    <input type="hidden" name="permissions" id="editRolePermissions">
                  </div>
                  <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button><button type="submit" class="btn btn-primary">Save</button></div>
                </form>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="chatbot" role="tabpanel">
            <h5>Chatbot Settings</h5>
            <form id="chatbotSettingsForm" method="post" action="/admin/settings/chatbot">
              <div class="mb-3"><label class="form-label">Chatbot Status</label><div class="form-check form-switch"><input class="form-check-input" type="checkbox" id="chatbotStatus" name="chatbotStatus" <%= (chatbotSettings && chatbotSettings.status) ? 'checked' : '' %>><label class="form-check-label" for="chatbotStatus">Enable Chatbot</label></div></div>
              <div class="mb-3"><label for="chatbotResponses" class="form-label">Default Responses</label><textarea class="form-control" id="chatbotResponses" name="chatbotResponses" rows="5"><%- JSON.stringify((chatbotSettings && chatbotSettings.responses) ? chatbotSettings.responses : {"greeting": "Hello! How can I assist you today?", "faq": "Please ask about medications or appointments."}, null, 2) %></textarea></div>
              <div class="mb-3"><label for="chatbotPlatform" class="form-label">Chatbot Platform</label><select class="form-select" id="chatbotPlatform" name="chatbotPlatform"><option value="dialogflow" <%= (chatbotSettings && chatbotSettings.platform === 'dialogflow') ? 'selected' : '' %>>Dialogflow</option><option value="botpress" <%= (chatbotSettings && chatbotSettings.platform === 'botpress') ? 'selected' : '' %>>Botpress</option></select></div>
              <button type="submit" class="btn btn-primary">Save Chatbot Settings</button>
            </form>
          </div>
          <div class="tab-pane fade" id="wearable" role="tabpanel">
            <h5>Wearable Integration</h5>
            <form id="wearableSettingsForm" method="post" action="/admin/settings/wearables">
              <div class="mb-3"><label class="form-label">Google Fit Integration</label><div class="form-check form-switch"><input class="form-check-input" type="checkbox" id="googleFitStatus" name="googleFitStatus" <%= (wearableSettings && wearableSettings.googleFit && wearableSettings.googleFit.enabled) ? 'checked' : '' %>><label class="form-check-label" for="googleFitStatus">Enable Google Fit</label></div></div>
              <div class="mb-3"><label for="googleFitApiKey" class="form-label">Google Fit API Key</label><input type="text" class="form-control" id="googleFitApiKey" name="googleFitApiKey" value="<%= (wearableSettings && wearableSettings.googleFit && wearableSettings.googleFit.apiKey) ? wearableSettings.googleFit.apiKey : '' %>"></div>
              <div class="mb-3"><label class="form-label">Apple HealthKit Integration</label><div class="form-check form-switch"><input class="form-check-input" type="checkbox" id="healthKitStatus" name="healthKitStatus" <%= (wearableSettings && wearableSettings.healthKit && wearableSettings.healthKit.enabled) ? 'checked' : '' %>><label class="form-check-label" for="healthKitStatus">Enable HealthKit</label></div></div>
              <div class="mb-3"><label for="healthKitApiKey" class="form-label">HealthKit API Key</label><input type="text" class="form-control" id="healthKitApiKey" name="healthKitApiKey" value="<%= (wearableSettings && wearableSettings.healthKit && wearableSettings.healthKit.apiKey) ? wearableSettings.healthKit.apiKey : '' %>"></div>
              <div class="mb-3"><label class="form-label">Data Sync Frequency</label><select class="form-select" id="syncFrequency" name="syncFrequency"><option value="hourly" <%= (wearableSettings && wearableSettings.frequency === 'hourly') ? 'selected' : '' %>>Hourly</option><option value="daily" <%= (wearableSettings && wearableSettings.frequency === 'daily') ? 'selected' : '' %>>Daily</option><option value="realtime" <%= (wearableSettings && wearableSettings.frequency === 'realtime') ? 'selected' : '' %>>Real-Time</option></select></div>
              <button type="submit" class="btn btn-primary">Save Wearable Settings</button>
            </form>
          </div>
          <div class="tab-pane fade" id="security" role="tabpanel">
            <h5>Security Settings</h5>
            <form id="securitySettingsForm" method="post" action="/admin/settings/security">
              <div class="mb-3"><label class="form-label">Two-Factor Authentication</label><div class="form-check form-switch"><input class="form-check-input" type="checkbox" id="twoFactorAuth" name="twoFactorAuth" <%= (securitySettings && securitySettings.twoFactorAuth) ? 'checked' : '' %>><label class="form-check-label" for="twoFactorAuth">Enable 2FA</label></div></div>
              <div class="mb-3"><label for="encryptionLevel" class="form-label">Encryption Level</label><select class="form-select" id="encryptionLevel" name="encryptionLevel"><option value="aes-128" <%= (securitySettings && securitySettings.encryptionLevel === 'aes-128') ? 'selected' : '' %>>AES-128</option><option value="aes-256" <%= (!securitySettings || securitySettings.encryptionLevel === 'aes-256') ? 'selected' : '' %>>AES-256</option></select></div>
              <div class="mb-3"><label for="sessionTimeout" class="form-label">Session Timeout (minutes)</label><input type="number" class="form-control" id="sessionTimeout" name="sessionTimeout" value="<%= (securitySettings && securitySettings.sessionTimeout) ? securitySettings.sessionTimeout : 30 %>"></div>
              <div class="mb-3"><label class="form-label">Password Policy</label><div class="form-check"><input class="form-check-input" type="checkbox" id="passwordLength" name="passwordLength" <%= (securitySettings && securitySettings.passwordPolicy && securitySettings.passwordPolicy.length) ? 'checked' : '' %>><label class="form-check-label" for="passwordLength">Minimum 8 characters</label></div><div class="form-check"><input class="form-check-input" type="checkbox" id="passwordSpecialChar" name="passwordSpecialChar" <%= (securitySettings && securitySettings.passwordPolicy && securitySettings.passwordPolicy.specialChar) ? 'checked' : '' %>><label class="form-check-label" for="passwordSpecialChar">Require special characters</label></div></div>
              <button type="submit" class="btn btn-primary">Save Security Settings</button>
            </form>
          </div>
        </div>
    </div>


<script>
  document.getElementById('editRoleModal')?.addEventListener('show.bs.modal', function (event) {
    var button = event.relatedTarget;
    var id = button.getAttribute('data-id');
    var name = button.getAttribute('data-name');
    document.getElementById('editRoleName').value = name || '';
    document.getElementById('editRoleForm').setAttribute('action', '/admin/settings/roles/' + id + '/update');
    // Prefill permissions from data attribute
    var perms = {};
    try { perms = JSON.parse(button.getAttribute('data-permissions')||'{}'); } catch(_) { perms = {}; }
    document.querySelectorAll('.perm').forEach(cb => {
      var key = cb.getAttribute('data-key');
      cb.checked = !!perms[key];
    });
  });

  document.getElementById('editRoleForm')?.addEventListener('submit', function(e){
    var perms = {};
    document.querySelectorAll('.perm').forEach(cb => perms[cb.getAttribute('data-key')] = cb.checked);
    var hidden = document.getElementById('editRolePermissions');
    if (hidden) hidden.value = JSON.stringify(perms);
  });
</script>
