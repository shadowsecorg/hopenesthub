{
  "name": "hopenest-hub",
  "version": "0.1.0",
  "description": "HopeNest Hub - API skeleton built with Express and PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env development",
    "pm2:restart": "pm2 restart hopenest-hub",
    "pm2:stop": "pm2 stop hopenest-hub || true && pm2 delete hopenest-hub || true",
    "pm2:logs": "pm2 logs hopenest-hub",
    "pm2:save": "pm2 save",
    "pm2:list": "pm2 list",
    "pm2:monit": "pm2 monit",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "pm2": "^6.0.8",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "sequelize-cli": "^6.6.3"
  }
}
